@page "/"
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div class="top-Infos">
    <div>
        <MudIconButton Icon="@Icons.Material.Filled.Message" Style="color: #edf6f9;" Size="Size.Large"></MudIconButton>
    </div>
    <div>
        <MudText Typo="Typo.h4" Style="color: #B54040;">MyFreePal</MudText>
    </div>
    <div style="margin-right: 0.5%">
        <MudAvatar Size="Size.Large" Style="background: linear-gradient(to right, #3A3A3A,#4A2323)">
            <MudIconButton Icon="@Icons.Material.Filled.Person" Size="Size.Large" Color="Color.Default"></MudIconButton>
        </MudAvatar>
    </div>
</div>

<div class="content-container">
    <div class="left-side-content">
        <MudPaper
            Style="display: flex; justify-content: center; align-items: center; background-color: #3A3A3A; height: 65%; width: 60%;"
            Elevation="2">
            <MudText Style="color: white;">Werbung</MudText>
        </MudPaper>
    </div>

    <div style="display: flex; height: 100%; width: 40%; justify-content: center;">
        <div class="main">
            <div class="top-Carousel">
                <MudCarousel Style="height: 16.5em; width: 80%;" ShowArrows="true" ShowBullets="true"
                             EnableSwipeGesture="false"
                             AutoCycle="false" TData="object">
                    <MudCarouselItem Transition="Transition.Slide" Style="background-color: #4A2323">
                        <div class="d-flex" style="height:100%">
                            <MudIcon Class="mx-auto my-auto" Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large"/>
                        </div>
                    </MudCarouselItem>
                    <MudCarouselItem Transition="Transition.Slide" Style="background-color: #4A2323">
                        <div class="d-flex" style="height:100%">
                            <MudIcon Class="mx-auto my-auto" Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large"/>
                        </div>
                    </MudCarouselItem>
                </MudCarousel>
            </div>


            <div class="training-step-container">
                <div style="margin-right: 3.5%; width: calc(10.5em * 2); height: 10.5em;">
                    <MudPaper Style="background-color: #4A2323; width: 100%; height: 100%;">
                        <label>Training</label>
                    </MudPaper>
                </div>

                <div style="margin-left: 3.5%; width: calc(10.5em * 2); height: 10.5em;">
                    <MudPaper Style="background-color: #4A2323; width: 100%; height: 100%;">
                        <label>Schritte</label>
                    </MudPaper>
                </div>

            </div>

            <div class="top-Carousel">
                <MudCarousel Style="height: 16.5em; width: 80%;" ShowArrows="true" ShowBullets="true"
                             EnableSwipeGesture="false"
                             AutoCycle="false" TData="object">
                    <MudCarouselItem Transition="Transition.Slide" Style="background-color: #4A2323">
                        <div class="d-flex" style="height:100%">
                            <MudIcon Class="mx-auto my-auto" Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large"/>
                        </div>
                    </MudCarouselItem>
                    <MudCarouselItem Transition="Transition.Slide" Style="background-color: #4A2323">
                        <div class="d-flex" style="height:100%">
                            <MudIcon Class="mx-auto my-auto" Icon="@Icons.Custom.Brands.MudBlazor" Size="@Size.Large"/>
                        </div>
                    </MudCarouselItem>
                </MudCarousel>
            </div>
        </div>
    </div>
    


    <div class="right-side-content">
        <MudPaper
            Style="display: flex; justify-content: center; align-items: center; background-color: #3A3A3A; height: 65%; width: 60%;"
            Elevation="2">
            <MudText Style="color: white;">Werbung</MudText>
        </MudPaper>
    </div>
</div>


